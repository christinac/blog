
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<title>Christina Cacioppo</title>
		<link rel="stylesheet" type="text/css" href="static/css/cc.css">
	</head>
	<body>
	  <div class="centerdiv">
	
  <%= nest_template 'views/nav.erb' %>

	  <div class="blog-name"><a href="http://www.christinacacioppo.com/blog">Kidogo</a></div>

	  <% posts.each do |post| %>
	  	<div class="post">
    		<h2 class="title"><%= post.title %></h2>
    		<a class="date" href="<%= post.id %>"><%= post.date.strftime('%B %e, %Y') %></a></br>
    		<div class="body">
    			<%= post.body %>
    		</div>
    	</div>
	  <% end %>

  <% if page > 1 %>
    &laquo; <a href="/page/<%= page - 1 %>">Later</a>
  <% end %>

  <% if page < max_pages %>
    <span style="float:right;"><a href="/page/<%= page + 1 %>">Earlier</a> &raquo;</span>
  <% end %>

  <%= nest_template 'views/ganalytics.erb' %>

</body>
</html>